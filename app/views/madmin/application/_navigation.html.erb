<h1 class="text-xl font-bold mb-6">
  <%= link_to_if respond_to?(:root_url), Madmin.site_name, root_url, data: {turbo: false}, class: "hover:text-blue-600" %>
</h1>
<nav class="flex flex-col gap-2">
  <%= nav_link_to "Dashboard", madmin_root_path, class: "py-2 px-3 rounded hover:bg-gray-100" %>
  <% Madmin.menu.render do |item| %>
    <% if item.url %>
      <%= nav_link_to item.label, item.url, starts_with: item.url, class: "py-2 px-3 rounded hover:bg-gray-100" %>
    <% else %>
      <h4 class="mt-4 mb-1 text-xs text-gray-500 font-semibold"><%= item.label %></h4>
    <% end %>
    <% item.items.each do |item| %>
      <%= nav_link_to item.label, item.url, starts_with: item.url, class: "ml-4 py-2 px-3 rounded hover:bg-gray-100" %>
    <% end %>
  <% end %>
</nav>
