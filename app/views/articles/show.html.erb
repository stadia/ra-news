<% content_for :title, @article.title_ko %>

<div class="space-y-6 lg:space-y-8 max-w-6xl mx-auto" id="<%= dom_id @article %>">
  <!-- 메인 아티클 -->
  <article class="bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-700">
    <!-- 아티클 헤더 -->
    <header class="p-4 md:p-6 lg:p-8 border-b border-gray-700">
      <div class="mb-6">
        <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-100 mb-4 leading-tight">
          <%= @article.title_ko %>
        </h1>

        <% if @article.title_ko != @article.title %>
          <h2 class="text-lg md:text-xl lg:text-2xl font-medium text-gray-300 mb-4">
            <%= @article.title %>
          </h2>
        <% end %>
      </div>

      <!-- 메타데이터 -->
      <div class="flex flex-wrap items-center gap-4 md:gap-6 text-sm text-gray-300">
        <!-- 작성자 -->
        <div class="flex items-center">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div>
            <div class="text-xs text-gray-300">작성자</div>
            <div class="font-medium text-gray-200"><%= render partial: 'shared/article_user', locals: { article: @article } %></div>
          </div>
        </div>

        <!-- 발행일 -->
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <div>
            <div class="text-xs text-gray-300">발행일</div>
            <div class="font-medium text-gray-200">
              <%= @article.published_at&.strftime("%Y년 %m월 %d일") || 'N/A' %>
            </div>
          </div>
        </div>
      </div>

      <!-- 원문 링크 -->
      <div class="mt-6 p-4 bg-gray-700 rounded-lg">
        <%= link_to @article.url, target: "_blank", rel: "noopener noreferrer",
            class: "flex items-center justify-between group hover:bg-gray-600 transition-colors duration-200 rounded-lg p-2" do %>
          <div class="flex items-center flex-1 min-w-0">
            <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center mr-3 flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <div class="text-sm font-medium text-blue-300 group-hover:text-blue-200 transition-colors">
                원문 보기
              </div>
              <div class="text-xs text-gray-300 truncate">
                <%= URI.parse(@article.url).host %>
              </div>
            </div>
          </div>
          <svg class="w-5 h-5 text-gray-400 group-hover:text-gray-300 transition-colors flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </header>

    <!-- 아티클 내용 -->
    <div class="p-4 md:p-6 lg:p-8">
      <!-- 3줄 요약 -->
      <section class="mb-8 lg:mb-12">
        <div class="bg-gradient-to-r from-green-600 to-green-700 rounded-lg p-6">
          <h2 class="text-xl lg:text-2xl font-bold text-white mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            핵심 요약
          </h2>
          <% if @article.summary_key.is_a?(Array) %>
            <ul class="space-y-3">
              <% @article.summary_key&.each_with_index do |item, index| %>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-6 h-6 bg-white bg-opacity-20 rounded-full flex items-center justify-center text-xs font-bold text-white mr-3 mt-0.5">
                    <%= index + 1 %>
                  </span>
                  <span class="text-green-100 leading-relaxed"><%= item %></span>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </section>

      <!-- 상세 내용 -->
      <section class="prose prose-lg max-w-none">
        <% if @article.summary_detail.is_a?(Hash) %>
          <!-- 도입부 -->
          <% if @article.summary_detail["introduction"].present? %>
            <div class="mb-8 p-6 bg-gray-700 rounded-xl border-l-4 border-blue-500">
              <h3 class="text-lg font-semibold text-blue-300 mb-3">도입</h3>
              <div class="text-gray-200 leading-relaxed text-base">
                <%= @article.summary_detail["introduction"] %>
              </div>
            </div>
          <% end %>

          <!-- 본문 -->
          <% if @article.summary_detail["body"].present? %>
            <div class="mb-8 article-content" id="article-detail-body">
              <div class="prose prose-lg max-w-none text-gray-200 leading-loose">
                <%= Kramdown::Document.new(@article.summary_detail["body"]).to_html.html_safe %>
              </div>
            </div>
          <% end %>

          <!-- 결론 -->
          <% if @article.summary_detail["conclusion"].present? %>
            <div class="p-6 bg-gray-700 rounded-xl border-l-4 border-green-500">
              <h3 class="text-lg font-semibold text-green-300 mb-3">결론</h3>
              <div class="text-gray-200 leading-relaxed text-base">
                <%= @article.summary_detail["conclusion"] %>
              </div>
            </div>
          <% end %>
        <% end %>
      </section>
    </div>
  </article>

  <!-- 관련 글들 -->
  <% if @similar_articles.present? %>
    <section class="bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-700">
      <div class="p-4 md:p-6 lg:p-8">
        <h2 class="text-xl lg:text-2xl font-bold text-gray-100 mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          관련 글들
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
          <% @similar_articles.each do |article| %>
            <div class="group bg-gray-700 rounded-lg border border-gray-600 hover:border-gray-500 transition-all duration-200 overflow-hidden">
              <%= link_to article_path(article.slug), class: "block p-4 lg:p-6" do %>
                <h3 class="text-lg font-semibold text-gray-100 group-hover:text-green-400 transition-colors duration-200 mb-3 line-clamp-2">
                  <%= article.title_ko || article.title %>
                </h3>
                <p class="text-gray-200 text-sm leading-relaxed line-clamp-3 mb-4">
                  <%= article.summary_key.is_a?(String) ? article.summary_key : article.summary_key&.first %>
                </p>
                <div class="flex items-center justify-between text-xs text-gray-300">
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <%= article.published_at&.strftime("%m/%d") %>
                  </span>
                  <span class="group-hover:text-green-400 transition-colors duration-200">읽어보기 →</span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- 댓글 섹션 -->
  <section class="bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-700">
    <div class="p-4 md:p-6 lg:p-8">
      <h3 id="comments_header" class="text-xl lg:text-2xl font-bold text-gray-100 mb-6 flex items-center">
        <%= render partial: 'comments/header', locals: { comments: @comments } %>
      </h3>

      <!-- 댓글 작성 폼 -->
      <div id="comment_form" class="border-t border-gray-700 mb-4">
        <%= render partial: 'comments/form', locals: { article: @article, comment: @comment } %>
      </div>

      <!-- 댓글 목록 -->
      <div class="space-y-4 pt-6">
        <%= render partial: 'comments/comments', locals: { article: @article, comments: @comments } %>
      </div>
    </div>
  </section>
</div>
