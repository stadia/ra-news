<%= turbo_frame_tag "new_comment" do %>
  <%= form_with(model: [article, comment], local: false) do |f| %>
    <% if comment.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul class="list-disc ml-6">
          <% comment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= f.text_area :body, rows: 2, class: [
        "w-full border rounded p-2",
        (comment.errors[:body].none? ? "border-gray-400 focus:outline-blue-600" : "border-red-400 focus:outline-red-600")
      ].join(' '), placeholder: "댓글을 입력하세요..." %>
    </div>

    <div class="inline">
      <%= f.submit "댓글 작성", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
<% end %>
