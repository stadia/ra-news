<% content_for :title, "RA || 루비 AI 뉴스" %>

<!-- 태그 필터 -->
<% if @popular_tags.present? %>
  <%= render(TagFilterComponent.new(popular_tags: @popular_tags, current_tag: @current_tag)) %>
<% end %>

<!-- 기사 목록 -->
<div id="articlesList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% if @articles.any? %>
    <% @articles.each do |article| %>
      <%= render(ArticleComponent.new(article: article)) %>
    <% end %>
  <% else %>
    <div class="col-span-full text-center py-12">
      <div class="text-gray-400">
        <svg class="mx-auto h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        <h3 class="text-lg font-medium mb-2">해당 태그의 기사가 없습니다</h3>
        <p class="text-sm">
          <% if @current_tag %>
            '<%= @current_tag %>' 태그로 필터링된 기사가 없습니다.
            <%= link_to "전체 기사 보기", root_path, class: "text-blue-400 hover:text-blue-300 underline" %>
          <% else %>
            아직 등록된 기사가 없습니다.
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>
