<div id="<%= dom_id @article %>" class="group bg-white/10 backdrop-blur-xl rounded-3xl border border-white/10 p-6 flex flex-col hover:bg-white/15 hover:border-[#FF0033]/50 transition-all duration-300 relative overflow-hidden">
    <!-- Glass Shine Effect -->
    <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

    <div class="mb-4 relative z-10">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <% if @article.site&.favicon_url.present? %>
               <%= image_tag @article.site.favicon_url, class: "w-4 h-4 rounded-full opacity-70" %>
          <% else %>
               <div class="w-4 h-4 rounded-full bg-white/20"></div>
          <% end %>
          <span class="text-xs font-medium text-white/50 uppercase tracking-wider"><%= @article.host %></span>
        </div>
        <span class="text-xs text-gray-400 font-mono"><%= time_ago_in_words(@article.published_at) %> ago</span>
      </div>

      <h3 class="text-xl font-bold text-white mb-2 leading-tight tracking-tight group-hover:text-white/90 transition-colors">
          <%= link_to @article.title_ko || @article.title, article_path(@article.slug), class: "focus:outline-none after:absolute after:inset-0" %>
      </h3>
      <% if (@article.title_ko || @article.title) != @article.title %>
          <h4 class="text-sm font-medium text-white/40"><%= @article.title %></h4>
      <% end %>
    </div>

    <div class="text-gray-300 mb-6 text-sm leading-relaxed flex-grow line-clamp-3 font-normal relative z-10">
    <% if @article.summary_key.is_a?(Array) && @article.summary_key.present? %>
        <%= @article.summary_key.first %>
    <% elsif @article.summary_key.is_a?(String) && @article.summary_key.present? %>
        <%= @article.summary_key %>
    <% end %>
    </div>

    <div class="mt-auto pt-4 flex flex-wrap items-center gap-2 border-t border-white/5 relative z-10">
      <span class="px-3 py-1 rounded-full bg-red-500/10 border border-red-500/20 text-xs text-red-400 backdrop-blur-md">#Ruby</span>
      <span class="px-3 py-1 rounded-full bg-red-500/10 border border-red-500/20 text-xs text-red-400 backdrop-blur-md">#Dev</span>
      
      <!-- Notification Dot Accent -->
      <div class="ml-auto w-1.5 h-1.5 rounded-full bg-[#FF0033] shadow-[0_0_8px_#FF0033] opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
</div>
