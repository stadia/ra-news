<% if @article.user %>
    <%= @article.user&.name %>
<% elsif @article.site %>
    <% if @article.site.base_uri.present? %>
        <%= link_to @article.site.name, @article.site.base_uri, target: "_blank" %>
    <% else %>
        <%= @article.site.name %>
    <% end %>
<% else %>
    <span class="text-gray-500">알 수 없음</span>
<% end %>
